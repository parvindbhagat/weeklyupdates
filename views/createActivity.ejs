    <script>
        // var today = new Date();
        // var MylastDayOfMonth = new Date(today.getFullYear(), today.getMonth()+1, 0);
        // console.log(MylastDayOfMonth);
        $(function () {
            $("#startdate, #enddate").datepicker({
                autoclose: true,
                todayHighlight: true,
                multidate: false,
                // startDate: today,
                // endDate: MylastDayOfMonth,
                
                displayWeekNumbers: true
                
            }).datepicker('update', new Date());
        }); 
        
    </script>
