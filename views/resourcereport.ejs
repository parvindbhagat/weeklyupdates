    <!-- Table -->
    <h2 class="text-center mt-5">Workload Distribution Report for <%= selectedResourceName %></h2>
    <table class="table table-bordered table-striped mt-3">
      <thead>
        <tr>
          <th>Project Name</th>
          <th>Billable Hours</th>
          <th>Non-Billable Hours</th>
        </tr>
      </thead>
      <tbody>
        <%= projectNames %>
        <% for (let i = 0; i < projectNames.length; i++) { %>
          <tr>
            <td><%= projectNames[i] %></td>
            <td><%= billableHours[i] %></td>
            <td><%= nonBillableHours[i] %></td>
          </tr>
        <% } %>
