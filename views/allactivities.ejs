    .title-text {
        font-size: 3vw; /* Large size as the width of the screen */
        font-weight: bold;
       
        color: var(--secondary-color);
      }
    .timmylink{
     margin: 0;
      
    }
    .title{
      display: flex;
      justify-content: space-between;
    align-items: center;
    margin: 0 2rem;
    }
  </style>
</head>
<body>
  <nav class="navbar ">
      <a class="navbar-brand" href="/">
        <img src="/images/logo.png" alt="Chrysalis" >
      </a>
  </nav>
  <div class="title">
    <div class="title-text contentSection">LEAP</div>
    &nbsp;&nbsp;<a href="/activities" style="text-decoration: none;"><i class="ri-timer-flash-line"></i> Chrysalis Weekly Plan</a>&nbsp;&nbsp;
<a href="/createactivity" style="text-decoration: none;"><i class="ri-admin-line"></i> Project Manager Login</a>
    <a style="text-decoration: none;" href="http://chrysalishrd.sharepoint.com/pwa/Timesheet.aspx" target="_blank" class="box"> 
      <div class="timmylink">
        <h4>Timmy the TimeSheet</h4>
      </div>
    </a>
  </div>
<h1 style="text-align: center;">Chrysalis Weekly Plan Archive</h1>


  <div class="activitylist mb-50">
    <table class="table-striped table-auto m-2 bg-white border border-gray-300" >
      <thead class="bg-warning">
        <tr>
          <th class="border border-gray-300 px-4 py-2">Category</th>
          <th class="border border-gray-300 px-4 py-2">Activity</th>
          <th class="border border-gray-300 px-4 py-2">Start Date</th>
          <th class="border border-gray-300 px-4 py-2">End Date</th>
          <th class="border border-gray-300 px-4 py-2">Resource</th>
          <th class="border border-gray-300 px-4 py-2">Activity Type</th>
          <th class="border border-gray-300 px-4 py-2">Remarks</th>
          <th class="border border-gray-300 px-4 py-2">Status</th>
        </tr>
      </thead>
      <tbody>
        <% activities.forEach(activity => { %>
          <tr class="tableData">
            <td class="border border-gray-300 px-4 py-2 "><%= activity.activityType %></td>
            <td class="border border-gray-300 px-4 py-2 "><%= activity.activityName %></td>
            <td class="border border-gray-300 px-4 py-2 text-center"><%= activity.startDate %></td>
            <td class="border border-gray-300 px-4 py-2 text-center"><%= activity.endDate %></td>
            <td class="border border-gray-300 px-4 py-2 "><%= activity.resource %></td>
            <td class="border border-gray-300 px-4 py-2 "><%= activity.activityMode %></td>
            <td class="border border-gray-300 px-4 py-2 "><%= activity.remarks %></td>
            <td class="border border-gray-300 px-4 py-2 "><%= activity.status %></td>
          </tr>
        <% }); %>
      </tbody>
    </table>
</div>
